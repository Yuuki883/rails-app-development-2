
        <div class='body'>
      <div class='container'>
      <div class='row'>
  <div class='col-md-6 col-md-offset-3'><br>
    <h1>Editing Book</h1>

     <% if @book.errors.any? %>
       <div class="alert alert-warning">
       <p><%= @book.errors.count %> errors prohibited this book from being saved :</p>
        <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
       </ul>
      </div>
      <% end %>

  <div class="field row">
    <%= form_for(@book) do |f| %>
    <label for="book_title">Title</label>
    <div><%= f.text_field :title, class:"col-xs-12 book_body" %>
    </div>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <div> <%= f.text_area :body, class:"col-xs-12 book_body" %></div>
  </div>

  <div class="actions row"><br>
   <div> <%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %></div>
  </div>
  <% end %>
</form>

    <td><%= link_to "Show", book_path(@book) %></td>
    |
    <td><%= link_to "Back", books_path%></td>
  </div>
  </div>
</div>
</div>





