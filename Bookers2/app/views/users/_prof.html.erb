    <div class='col-sm-3'>
      <h2>User info</h2>
    <table class='table'>
        <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg" %>
        </tr>
          <tr>
          <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
          <th>Introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>
      <div class='row'>
      <%= link_to "", edit_user_path(user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

      <h2>New book</h2>

      <%= form_for(book) do |f| %>
       <div class="field row">
        <h4>Title</h4>
         <%= f.text_field :title %>
        </div>

        <div class="field row">
         <h4>Opinion</h4>
         <%= f.text_area :body %><br>
        </div>

      <div class="actions row">
       <%= f.submit 'Create Book', class:"col-xs-12 btn btn-primary glyphicon glyphicon-wrench" %>
       <% end %>
      </div>
    </div>


