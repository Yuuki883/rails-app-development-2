 <% if @user.errors.any? %>
       <div class="alert alert-warning">
       <p><%= @user.errors.count %> errors prohibited this book from being saved :</p>
        <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
       </ul>
      </div>
      <% end %>

<div class='container'>
      <h2>User info</h2>

      <%= form_for(@user) do |f| %>
      <div class="field">
      <label for="user_name">Name</label>
      <%= f.text_field :name %>

    <div class="form-group has-icon">
     <div class="user-edit-image">
      <label for="user_image">Image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

    <div class="field">
    <label for="user_name">Introduction</label>
    <%= f.text_field :introduction %>
    </div>
    <%= f.submit "Update User" %>
    <% end %>

    </div>
   </div>
  </div>
 </div>
