<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
 <% end %>

<div class='container'>
 <div class='row'>
<%= render 'users/prof', user: current_user, book: @book %>

  <div class='col-xs-9'>
    <h2>Books</h2>

   <table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg"%> </td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(user) %></td>
    <% end %>
   </tr>
  </tbody>
  </table>
 </div>
</div>
</div>